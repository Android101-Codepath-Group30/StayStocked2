<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StayStock2.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandDark</item>
        <item name="colorPrimaryVariant">@color/brandVariantDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brandSecondDark</item>
        <item name="colorSecondaryVariant">@color/brandSecondVariantDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/brandVariantDark</item>
        <!-- Customize your theme here. -->
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:editTextBackground">?attr/colorSecondary</item>
        <item name="android:textViewStyle">?attr/colorOnSecondary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:icon"> ?attr/colorControlNormal</item>


    </style>
</resources>